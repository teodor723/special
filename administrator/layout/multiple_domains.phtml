function upfile(el,n=''){
  var key_name=$(el).attr('name');
  var key_value=$(el).val();
  var file = $(el)[0].files[0];
    if (file) {
        var reader = new FileReader();
        reader.onload = function(e) {
            var base64File = e.target.result.split(',')[1];
            $.ajax({
                url: request_source()+'/admin.php',
                type: 'POST',
                dataType: 'JSON',
                data: {
                    action: 'save_multi_domain_settings',
                    key_name: key_name,
                    filename: file.name,
                    key_value: base64File,
                    filetype: file.type,
                    n:n
                },
                success: function(response) {
                    if(response.errmsg) {
                        toastr.error('Error!', response.errmsg);
                    }
                    if(response.msg) {
                        toastr.success('Success!', response.msg);
                    }
                },
                error: function(xhr, status, error) {
                    toastr.error('Error!', error);
                }
            });
        };
        reader.readAsDataURL(file);
    }
}
