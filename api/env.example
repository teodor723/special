# Application Configuration
APP_NAME="Dating Site API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Cache & Session
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue Configuration
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Pusher Configuration (Real-time messaging)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_key
PUSHER_APP_SECRET=your_pusher_secret
PUSHER_APP_CLUSTER=your_cluster

# AWS Configuration (S3 Storage & Rekognition)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_bucket_name

# Firebase Configuration (for mobile auth)
FIREBASE_API_KEY=your_firebase_api_key

# Geolocation API (Geoapify)
GEOLOCATION_API_KEY=your_geoapify_key

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Dating App Settings
INITIAL_CREDITS=100
INITIAL_SUPER_LIKES=5
CHAT_CREDITS_PER_MESSAGE=5

#-----------------------------------------
# PAYMENT CONFIGURATION
#-----------------------------------------
PAYMENT_CURRENCY=EUR
PAYMENT_CURRENCY_SYMBOL=â‚¬
PAYMENT_REDIRECT_URL=/payment-result

#-----------------------------------------
# PayPal (Website Payments Standard)
# Only requires your PayPal business email
# No API keys needed - uses redirect & IPN
#-----------------------------------------
PAYPAL_ENABLED=true
PAYPAL_SANDBOX=false
PAYPAL_BUSINESS_EMAIL=your_paypal_email@example.com

